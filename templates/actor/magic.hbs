<section class='tab magic scrollable {{tab.cssClass}}' data-group='primary' data-tab='magic'>
  {{#if cantrips}}
  <div class="item-title">
    <label>{{localize "AFF.Cantrips"}}</label>
  </div>
  <div class="list grid">
    {{#each cantrips as | item |}}
    {{> "systems/aff2e/templates/actor/item.hbs" item=item}}
    {{/each}}
  </div>
  <div class="horizontal-rule"></div>
  {{/if}}
  {{#if spells}}
  <div class="item-title">
    <label>{{localize "AFF.Spell"}}</label>
  </div>
  <div class="list grid">
    {{#each spells as | item |}}
    {{> "systems/aff2e/templates/actor/item-with-value.hbs" item=item}}
    {{/each}}
  </div>
  {{/if}}
</section>
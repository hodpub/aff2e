<section class='tab attributes scrollable {{tab.cssClass}}' data-group='primary' data-tab='attributes'>
  <div class="form-group">
    <label>{{localize "AFF.Item.Armour.FIELDS.protection.label"}}</label>
    {{#each system.protection as | item |}}
    <input class="square" type="number" name="system.protection.{{@index}}" value="{{item}}" />
    {{/each}}
  </div>
  <div class="grid">
    {{formGroup systemFields.equipped value=system.equipped}}
    {{formGroup systemFields.magical value=system.magical}}
  </div>
  {{formGroup systemFields.protectionRollBonus value=system.protectionRollBonus}}
  {{formGroup systemFields.minRequired value=system.minRequired}}
  {{priceInfo systemFields.price value=system.price}}
</section>
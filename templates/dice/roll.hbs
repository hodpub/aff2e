<div class="dice-roll" data-action="expandRoll">
    {{#if flavor}}
    <div class="dice-flavor">{{flavor}}</div>
    {{/if}}
    <div class="dice-result {{cssClass}}">
        {{{valuesHtml}}}
        <div class="dice-formula">{{formula}}</div>
        {{{tooltip}}}
        <h4 class="dice-total">
            {{#if isPrivate}}
            ?
            {{else}}
            {{localize (concat "AFF.Roll.Result." rollResult)}}
            {{total}}
            {{#if target}}
            <i class="fa-arrow-circle-down fa-regular" aria-hidden="true"></i>
            {{target}}
            {{else}}
            {{#if cssClass}}
            <i class="fa-arrow-circle-up fa-regular" aria-hidden="true"></i>
            {{else}}
            <i class="fa-solid fa-{{options.icon}}" aria-hidden="true"></i>
            {{rollValue}}
            {{/if}}
            {{/if}}
            {{/if}}
        </h4>
    </div>
</div>